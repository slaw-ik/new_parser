.wrapper
  .tabbable.tabs-right
    %ul.nav.nav-tabs
      %li.active
        %a{"data-toggle" => "tab", :href => "#tab1"} Description
      %li
        %a{"data-toggle" => "tab", :href => "#tab2"} Section 2
    .hide-arrow{:onclick => "hide_panel();"}
      %i.icon-chevron-left
    .tab-content
      #tab1.tab-pane.active
        %h5
          Full description
        .well.description
          = @desc
      #tab2.tab-pane
        %p Howdy, I'm in Section 2.
  %input{:id => "coord_from", :value => ""}
  %input{:id => "coord_to", :value => ""}
  = link_to 'Other Map', '/othermap', :remote=>true
  .search_block
    .results
      Number of points:
      = @size

    .search_form
      = form_tag("/search", :method => "get", :class => "form-search") do
        -#= label_tag(:q, "Search for:")
        = text_field_tag(:q, params[:q], :class => "input-medium search-query", :placeholder => "Search")
        = submit_tag("Search", :class => "btn")
    -#.calender
      = form_tag("/search", :method => "get") do
        = text_field_tag :date, nil, :class => 'jquery-ui-date'

  .map_section
    - if defined? zoom
      - @zoom = zoom
      - else
      - @zoom = 9

    - center_latitude = (defined? center_lat) ? center_lat : 48.471303
    - center_longitude = (defined? center_long) ? center_long : 22.882928
    = gmaps({"map_options" => {"auto_adjust" => false, "auto_zoom" => true, "zoom" => @zoom.to_i, "center_latitude" => center_latitude, "center_longitude" => center_longitude },"markers" => {"data" => @json }})


  -#.well{:style => "margin-top:20px;"}
    .description
      = @desc
      -#Full description...

  #vk_like
  %script{:type => "text/javascript"}
    VK.Widgets.Like("vk_like", {type: "full"});

