= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f|
  = devise_error_messages!
  %fieldset
    %legend
      Sign up
    .control-group
      = f.label :email, :class => "control-label", :for => "email"
      .controls
        = f.email_field :email, :class => "input-xlarge"
    .control-group
      = f.label :password, :class => "control-label", :for => "password"
      .controls
        = f.password_field :password, :class => "input-xlarge"
    .control-group
      = f.label :password_confirmation, :class => "control-label", :for => "password_confirmation"
      .controls
        = f.password_field :password_confirmation, :class => "input-xlarge"
    .form-actions
      %button.btn.btn-primary.btn-large{:type => "submit"} Submit
      %button.btn Cancel

= render "devise/shared/links"
