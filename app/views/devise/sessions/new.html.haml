= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal"}) do |f|
  %fieldset
    %legend
      Sign in
    .control-group
      = f.label :email, :class => "control-label", :for => "email"
      .controls
        = f.email_field :email, :class => "input-xlarge"
    .control-group
      = f.label :password, :class => "control-label", :for => "password"
      .controls
        = f.password_field :password, :class => "input-xlarge"
    - if devise_mapping.rememberable?
      .control-group
        .controls
          %label{:class => "checkbox"}
            Remember me
            = f.check_box :remember_me
    .form-actions
      %button.btn.btn-primary.btn-large{:type => "submit"} Submit
= render "devise/shared/links"
