source 'https://rubygems.org'

gem 'rails', '5.1.3'

gem 'sqlite3'

gem 'haml-rails'
gem 'devise'

gem 'geocoder'
gem 'gmaps4rails'
gem 'nokogiri'

gem "twitter-bootstrap-rails"

gem 'thin'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'less-rails'
  gem 'sass-rails'
  gem 'coffee-rails'

  gem 'therubyracer', :platforms => :ruby

  gem 'uglifier'
end

group :development, :test do
  gem 'hpricot'
  gem 'ruby_parser'
  #gem 'better_errors'
  #gem 'binding_of_caller'
  gem 'meta_request'

  gem 'rspec-rails'

  gem 'rubocop', '~> 0.39.0'
end

group :production do
  gem 'activerecord-postgresql-adapter'
  gem 'pg'
end

gem 'jquery-rails'

gem 'listen'

gem 'webpacker', '~> 2.0'
gem 'gon', '~> 6.2'